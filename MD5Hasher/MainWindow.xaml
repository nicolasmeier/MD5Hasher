<Window x:Class="MD5Hasher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MD5Hasher"
        mc:Ignorable="d"
        Title="MD5 Hasher by Nicolas Meier ©  2016" Height="100.000" Width="600.000">
    <Grid>
        <Button x:Name="button" Content="Select File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBlock x:Name="textBlock" Margin="90,14,10,0" TextWrapping="Wrap" Text="No File selected" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" Margin="10,35,10,11" TextWrapping="Wrap"/>

    </Grid>
</Window>
